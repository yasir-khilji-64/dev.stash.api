{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "target": "ES2020",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true,
  },
  "include": [
    "./*.js",
    "src/**/*.ts",
  ]
}